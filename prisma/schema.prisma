generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Company {
  id        String   @id @default(uuid())
  name      String?
  active    Boolean  @default(true)
  users     User[]
  files     File[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  name      String?
  password  String?
  role      String    @default("user")
  active    Boolean   @default(true)
  sessions  Session[]
  files     File[]
  company   Company?  @relation(fields: [companyId], references: [id])
  companyId String?
}

model Session {
  id          String   @id @default(uuid())
  lastIp      String
  initiatorIp String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  initiator   User?    @relation(fields: [initiatorId], references: [id])
  initiatorId String?
}

model File {
  id          String   @id @default(uuid())
  url         String?
  name        String
  caption     String
  description String
  hash        String
  size        Int
  ext         String
  mime        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   User?    @relation(fields: [creatorId], references: [id])
  creatorId   String?
  Company     Company? @relation(fields: [companyId], references: [id])
  companyId   String?
}

model Store {
  key   String @id
  value String
}

model CompanyConfirmation {
  id        String   @id @default(uuid())
  token     String
  email     String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
